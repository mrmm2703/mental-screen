<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/blue"
    android:backgroundTint="#9E000000"
    android:backgroundTintMode="src_over"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nav_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="MUHAMMAD RAHMAN"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/nav_school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LONDON DESIGN &amp; ENGINEERING UTC"
        android:textColor="@color/subgrey"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/nav_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12S2 (YEAR 12)"
        android:textColor="@color/subgrey"
        app:autoSizeTextType="uniform" />

</LinearLayout>
